<link href="/assets/stylesheets/phones.scss" media="screen" rel="stylesheet" />

<p id="notice"><%= notice %></p>

<div class="filters">
	<div class="title"> Filtros </div>
	<hr>
	<%= form_with url:"/phones", method:"get", local: true do |form| %>
	 <div>
		 <%= form.label :manufacturer %>
		 <%= form.text_field :manufacturer_eq %>
	 </div>
	 <div>
	 	<%= form.label :model %>
	 	<%= form.text_field :model_eq %>
	 </div>
	 <div>
	 	<%= form.label :sale_modality %>
	 	<%= form.text_field :sale_modality_eq %>
	 </div>
	 <div>
	 	<%= form.submit :filtrar %>
	 </div>
	<% end %>
</div>



<table class="table table-striped table-bordered" id="example">
	<tr>
		<th> Fabricante </th>
		<th> Modelo </th>
		<th> Modo de Contrato </th>
	</tr>

	<%@phones.each do |phone|%>
		<tr>
			<td> <%=phone.manufacturer%> </td>
			<td> <%=phone.model%> </td>
			<td> <%=phone.sale_modality%> </td>
		</tr>
	<%end%>
</table>

